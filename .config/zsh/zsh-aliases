# prevent overwrites
alias cp="cp -i"
alias mv="mv -i"
alias rm="rm -i"

alias ls="eza -la --group-directories-first"
alias tree="eza --tree -a --group-directories-first"
alias "cd"="z"
alias cat="bat"
alias vim="nvim"

# alias python="python3"
# alias pip="pip3"

alias config='/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'
